{
    "provisioners": [    
    {
        "type": "shell",
        "inline": [
            "sleep 30",
            "apt update -y",
            "apt upgrade -y"
        ]
    },
      {
          "type": "shell",
          "inline": [
              "sleep 30",
              "apt-add-repository ppa:ansible/ansible -y",
              "/usr/bin/apt-get update",
              "/usr/bin/apt-get -y install ansible"
          ]
      },
      {
        "type": "ansible-local",
        "playbook_file": "playbook.yml"
      }
],
"builders": [
    {
        "type": "googlecompute",
        "account_file": ".json",
        "project_id": "MY_PROJECT_ID",
        "region":"europe-west2",
        "zone": "europe-west2-c",
        "machine_type": "n1-standard-2",
        "disk_size": 60,
        "disk_type": "pd-ssd",
        "ssh_username" : "root",
        "image_description": "Ubuntu baked Image",
        "source_image_family": "ubuntu-1804-lts",
        "network_project_id": "development",
        "subnetwork": "dev"
    }
        ]
}
